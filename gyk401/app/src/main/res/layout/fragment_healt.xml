<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealtFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/healtPicture"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"
        android:src="@drawable/lokmata_lokma"
        />
    <TextView
        android:id="@+id/healtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/healtPicture"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Sağlıklı Olmak için 5 İpucu"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@id/healtTitle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/healthy_hint"/>
    </ScrollView>

</RelativeLayout>